<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="2dp"
        android:left="-2dp"
        android:right="2dp"
        android:top="2dp"
        >
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#15BBDE"/>

            <solid android:color="#D3F1F9"/>
            <size
                android:width="34dp"
                android:height="34dp"/>
            <corners
                android:bottomRightRadius="34dp"
                android:topRightRadius="34dp"
                />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        >
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#15BBDE"/>

            <solid android:color="#00000000"/>
            <size
                android:width="34dp"
                android:height="34dp"/>
        </shape>
    </item>
</layer-list>